---
interface Props {
  title: string;
  skills: string[];
  iconColor: string;
}

const { title, skills, iconColor } = Astro.props;
---

<div class="p-6 rounded-2xl border border-slate-800 bg-slate-900/30">
  <div class="flex items-center gap-3 mb-4">
    <div class={`w-2 h-6 rounded-full ${iconColor}`}></div>
    <h3 class="text-lg font-semibold text-slate-100">{title}</h3>
  </div>
  <ul class="flex flex-wrap gap-2">
    {skills.map(skill => (
      <li class="px-3 py-1 bg-slate-800/50 text-slate-400 text-sm rounded-lg border border-slate-700/50">
        {skill}
      </li>
    ))}
  </ul>
</div>