---
interface Props {
  title: string;
  description: string;
  stack: string[];
  githubUrl: string;
  category: string;
  slug: string; // Ajoute ceci pour le slug du projet
  lang: string; // Ajoute ceci pour la langue
}

const { title, description, stack, githubUrl, category, slug, lang } =
  Astro.props;
---

<article
  class="group relative flex flex-col p-6 rounded-2xl border border-slate-800 bg-slate-900/50 hover:border-blue-500/50 transition-all duration-300"
>
  <h3
    class="text-xl font-bold text-slate-100 group-hover:text-blue-400 transition-colors"
  >
    {title}
  </h3>

  <p class="mt-3 text-slate-400 text-sm leading-relaxed grow">
    {description}
  </p>

  <div class="mt-6 flex flex-wrap gap-2 mb-6">
    {
      stack.map((tech: string) => (
        <span class="text-[10px] font-semibold bg-slate-800 text-slate-300 px-2 py-1 rounded border border-slate-700">
          {tech}
        </span>
      ))
    }
  </div>

  <a
    href={`/${lang}/projects/${slug}`}
    class="text-sm font-bold text-blue-400 hover:text-blue-300 flex items-center gap-2 transition-colors"
  >
    En savoir plus
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2.5"
      stroke-linecap="round"
      stroke-linejoin="round"
      ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
    >
  </a>
</article>
